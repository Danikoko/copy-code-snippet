{
    "compilerOptions": {
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "outDir": "./dist",
        "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
